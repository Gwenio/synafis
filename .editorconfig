root = true

[**]
insert_final_newline = true
trim_trailing_whitespace = true

[LICENSE]
charset = utf-8

[.clang-format]
charset = utf-8
indent_style = space
indent_size = 2

[**.txt]
charset = utf-8

[**.md]
charset = utf-8

[**.bat]
end_of_line = crlf

[**.sh]
end_of_line = lf

[**.rb]
indent_style = space
indent_size = 2
charset = utf-8

[**.json]
indent_style = tab
indent_size = 4
charset = utf-8

[**.js]
indent_style = tab
indent_size = 4
charset = utf-8

[**.hpp]
indent_style = tab
indent_size = 4

[**.cpp]
indent_style = tab
indent_size = 4

[**.def]
charset = utf-8
indent_style = tab
indent_size = 4
